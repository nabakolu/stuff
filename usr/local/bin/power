#!/bin/bash
CHOICE=$(echo "abort
shutdown
hibernate
suspend
reboot
" | dmenu -l 20)

if [ "$CHOICE" = "shutdown" ]
then
	shutdown now
fi

if [ "$CHOICE" = "hibernate" ]
then
	betterlockscreen -l &
	systemctl hibernate
fi

if [ "$CHOICE" = "suspend" ]
then
	betterlockscreen -l &
	systemctl suspend
fi

if [ "$CHOICE" = "reboot" ]
then
	systemctl reboot
fi
